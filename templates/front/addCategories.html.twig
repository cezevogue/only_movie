{% extends 'base.html.twig' %}

{% block body %}

    {{ form(form) }}

    <table class="table table-dark mt-5">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Actions</th>

        </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
        <tr>
            <th scope="row">{{ categorie.id }}</th>
            <td>{{ categorie.name }}</td>
            <td>
                <a href="{{ path('editCategories', {id: categorie.id}) }}" class="btn btn-success">Modifier</a>
                <a href="" class="btn btn-danger">Supprimer</a>
            </td>
            {% endfor %}
        </tr>

        </tbody>
    </table>
{% endblock %}

{% block title %}
    {{ parent() }}ajout de catégorie
{% endblock %}

{% block h1 %}
    Ajout de catégorie
{% endblock %}


