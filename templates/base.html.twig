<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}OnlyMOVIE | {% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.6.1/lux/bootstrap.min.css"
          integrity="sha512-v51SrQ+z+dLohC1d0HyJA0nSM6XIyLoQl3IxRtM28vlbOPBRMSD3MlyUMNkLyBPlVGxt+9V+ChVG2c8LQsiu3w=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('home') }}">OnlyMOVIE</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03"
                aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('home') }}">Accueil
                    </a>
                </li>
                {% if app.user %}


                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('usersMovies') }}">Ajouter un film</a>
                    </li>
                {% endif %}
                {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('fullCart') }}">Mon panier</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-success text-dark" href="{{ path('register') }}">S'inscrire</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary text-white" href="{{ path('login') }}">Se connecter</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('listUsersMovies') }}">Mes ajouts</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                           aria-haspopup="true" aria-expanded="false">{{ app.user.username }}</a>
                        <div class="dropdown-menu">
                            {% if is_granted("ROLE_ADMIN") %}


                                <a class="dropdown-item" href="{{ path('listMovies') }}">Accès Backoffice</a>
                            {% endif %}
                            {% if app.user %}


                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('logout') }}">déconnexion</a> {% endif %}
                        </div>
                    </li>
                {% endif %}
            </ul>
            <form class="d-flex" action="{{ path('home') }}" method="post">
                <input class="form-control me-sm-2" name="research" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>


<div class="container mt-5">

    <div class="text-center">
        <h1>  {% block h1 %}{% endblock %}</h1>
    </div>

    {% block body %}{% endblock %}
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>
</html>
